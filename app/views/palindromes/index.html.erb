<p id="notice"><%= notice %></p>

<h1>Palindromes</h1>

<table>
  <thead>
    <tr>
      <th>Phrase</th>
      <th>Is palindrome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @palindromes.each do |palindrome| %>
      <tr>
        <td><%= palindrome.phrase %></td>
        <td><%= palindrome.is_palindrome %></td>
        <td><%= link_to 'Show', palindrome %></td>
        <td><%= link_to 'Edit', edit_palindrome_path(palindrome) %></td>
        <td><%= link_to 'Destroy', palindrome, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

